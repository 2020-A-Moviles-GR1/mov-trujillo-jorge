<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="78dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tv_card_id_fr"
        android:layout_width="92dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_card_name_fr"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_name_fr" />

    <Button
        android:id="@+id/btn_map_card"
        android:layout_width="137dp"
        android:layout_height="37dp"
        android:text="Ver en mapa"
        app:layout_constraintEnd_toEndOf="@+id/tv_tcg"
        app:layout_constraintTop_toBottomOf="@+id/tv_tcg" />

    <TextView
        android:id="@+id/tv_card_name_fr"
        android:layout_width="263dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/tv_precio"
        android:layout_width="102dp"
        android:layout_height="20dp"
        android:layout_marginStart="68dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_card_id_fr"
        app:layout_constraintTop_toTopOf="@+id/tv_card_id_fr" />

    <TextView
        android:id="@+id/tv_tcg"
        android:layout_width="262dp"
        android:layout_height="21dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/tv_card_id_fr"
        app:layout_constraintTop_toBottomOf="@+id/tv_card_id_fr" />

    <TextView
        android:id="@+id/tv_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:text="Editar"
        android:textAllCaps="false"
        android:textColor="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView" />

</androidx.constraintlayout.widget.ConstraintLayout>
